<div class="row">
 <div class="col-md-12">
 <h2>Stores
     <a href="/stores/add" class="btn btn-success pull-right">Add New Store</a> 
 </h2>
 <hr />
 <div class = "table-responsive">
    <table class = "table">
        <thead><tr><th>Store Id</th><th>Store Name</th><th>Store Phone</th><th>Store Address</th></tr></thead>
    <tbody>
    {{#each stores}}
    <tr><td><a href="/store/{{id}}">{{id}}</a></td><td><a href=" /cars?make={{retailer}}">{{retailer}}</td><td><a href="tel:{{phone}}">{{phone}}</a></td><td>{{address}}</td><td><a class="btn btn-danger" href="stores/delete/{{id}}">Remove</a></td></tr>
    {{else}}
    <tr><td>No stores found</td></tr>
    {{/each}}
    </tbody>
    </table>
</div>
 </div>
</div> 