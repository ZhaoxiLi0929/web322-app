<div class="row">
 <div class="col-md-12">
 <h2>{{store.retailer}} - Id: {{ store.id}}</h2>
 <hr /> 
 <form method="post" action="/store/update">
 <fieldset>
 <legend>Store Information</legend>
 <div class="row">
 <div class="col-md-6">
 <div class="form-group">
 <label for="name">Store Name:</label>
 <input class="form-control" id="name" name="name" type="text" value="{{store.name}}" />
 </div>
 </div>

 <div class="col-md-6">
    <div class="form-group">
        <label for="phone">Store Phone:</label>
        <input class="form-control" id="phone" name="phone" type="text" value="{{store.phone}}" />
    </div>
 </div>
 </div>

<div class = "row">
<input class="form-control" id="id" name="id" type="hidden" value="{{store.id}}" />

 <div class="col-md-6">
    <div class="form-group">
        <label for="address">Store Address:</label>
        <input class="form-control" id="address" name="address" type="address" value="{{store.address}}" />
    </div>
 </div>

 <div class="col-md-6">
    <div class="form-group">
        <label for="city">Store City:</label>
        <input class="form-control" id="city" name="city" type="text" value="{{store.city}}" />
    </div>
 </div>
 </div>

 </fieldset>
 <hr />
 <input type="submit" class="btn btn-primary pull-right" value="Update Person" /><br /><br /><br />
 </form>
 </div>
</div> 